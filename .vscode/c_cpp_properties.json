{
    // c_cpp_properties.json # Used to use the code hint tool that comes with 
    // vscode such as IntelliSense
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/Library/Developer/CommandLineTools/usr/include",
                "/Library/Developer/CommandLineTools/usr/lib/clang/9.0.0/include",
                "/usr/local/include"
            ],
            "defines": [],
            "macFrameworkPath": [
                //"/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
                "/System/Library/Frameworks",
                "/Library/Frameworks"   
            ],
            // "macFrameworkPath":
            // [
            //  "/System/Library/Frameworks",
            // "/Library/Frameworks"
            // ],
            // default.
            // Install Xcode first, this item can be generated automatically.

            // "compilerPath": "/usr/bin/clang",
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c11",
            "cppStandard": "c++11",
            // "cppStandard": "c++98",default.
            "intelliSenseMode": "clang-x64"
            // "intelliSenseMode": "macos-clang-x64", default.
        }
    ],
    "version": 4
}